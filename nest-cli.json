{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "workspaces/ecommerce/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "builder": "swc",
        "typeCheck": true,
        "webpack": true,
        "tsConfigPath": "workspaces/ecommerce/tsconfig.app.json"
    },
    "monorepo": true,
    "root": "workspaces/ecommerce",
    "projects": {
        "ecommerce": {
            "type": "application",
            "root": "workspaces/ecommerce",
            "entryFile": "main",
            "sourceRoot": "workspaces/ecommerce/src",
            "compilerOptions": {
                "tsConfigPath": "workspaces/ecommerce/tsconfig.app.json"
            }
        },
        "notification-service": {
            "type": "application",
            "root": "workspaces/notification-service",
            "entryFile": "main",
            "sourceRoot": "workspaces/notification-service/src",
            "compilerOptions": {
                "tsConfigPath": "workspaces/notification-service/tsconfig.app.json"
            }
        }
    }
}
